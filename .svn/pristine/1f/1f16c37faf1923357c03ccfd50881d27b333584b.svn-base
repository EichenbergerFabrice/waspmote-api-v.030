  digitalWrite(MUX_USB_XBEE,HIGH);
}

void WaspUSB::print(long n)
{
  digitalWrite(MUX_PW,HIGH);
  digitalWrite(MUX_USB_XBEE,LOW);
  if (n < 0) {
    print('-');
    n = -n;
  }
  printNumber(n, 10);
  delay(DELAY_TIME);
  digitalWrite(MUX_USB_XBEE,HIGH);
}

void WaspUSB::print(unsigned long n)
{
  digitalWrite(MUX_PW,HIGH);
  digitalWrite(MUX_USB_XBEE,LOW);
  printNumber(n, 10);
  delay(DELAY_TIME);
  digitalWrite(MUX_USB_XBEE,HIGH);
}

void WaspUSB::print(long n, int base)
{
  digitalWrite(MUX_PW,HIGH);
  digitalWrite(MUX_USB_XBEE,LOW);
  if (base == 0)
    print((char) n);
  else if (base == 10)
    print(n);
  else
    printNumber(n, base);
  delay(DELAY_TIME);
  digitalWrite(MUX_USB_XBEE,HIGH);
}

